@using Microsoft.AspNetCore.Identity
@using DTO.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <h3 class="left">User List</h3>
        <a class="btn btn-primary right" id="AddUser">Add User</a>
        <br />
        <br />
        <div class="form-group">

            <table class="table">
                <tr>
                    <td>ID</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>Action</td>
                </tr>
                @foreach (var item in ViewBag.UserList)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        @*<td>@item.RoleName</td>*@
                        <td><a class="updateU">Update</a></td>
                        <td><a asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a></td>
                    </tr>

                }
            </table>
            @Html.PagedListPager((IPagedList)ViewBag.UserList, page => Url.Action("Index", "User", new { page }))
        </div>
    </div>
}



