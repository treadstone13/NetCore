@using Microsoft.AspNetCore.Identity
@using DTO.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <h3 class="left">User Role</h3>
        <a class="btn btn-primary right" id="AddUserRole">Add Role</a>
        <br />
        <br />
        <div class="form-group">

            <table class="table">
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>CreatedDate</td>
                    <td>Description</td>
                    <td>IPAddress</td>
                    <td>Action</td>
                </tr>
                @foreach (var item in ViewBag.UserRoleList)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.Description</td>
                        <td>@item.IPAddress</td>
                        <td><a class="updateR">Update</a></td>
                        <td><a asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id">Delete</a></td>
                    </tr>

                }
            </table>
            @Html.PagedListPager((IPagedList)ViewBag.UserRoleList, page => Url.Action("UserRole", "Role", new { page }))
        </div>
    </div>
}



